{
  "version": 2,
  "builds": [
    {
      "src": "build-for-vercel.js",
      "use": "@vercel/node",
      "config": {
        "distDir": "dist/public"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1.js"
    },
    {
      "src": "/(.*)",
      "dest": "/dist/public/$1"
    }
  ],
  "env": {
    "USE_FIRESTORE": "true",
    "FIREBASE_PROJECT_ID": "bismi-broilers-3ca96"
  }
}